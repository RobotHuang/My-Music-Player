<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <include layout="@layout/nav_bar"/>


    <com.hwy.mymusicplayer.views.InputView
        android:id="@+id/input_original_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputViewHeight"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/input_new_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:input_icon="@mipmap/password"
        app:input_hint="original password"
        app:is_password="true"/>

    <View
        style="@style/line"
        app:layout_constraintTop_toBottomOf="@id/input_original_password"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.hwy.mymusicplayer.views.InputView
        android:id="@+id/input_new_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputViewHeight"
        app:layout_constraintTop_toTopOf="@id/input_original_password"
        app:layout_constraintBottom_toBottomOf="@id/input_new_password_confirm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:input_icon="@mipmap/password"
        app:input_hint="enter new password"
        app:is_password="true"/>

    <View
        style="@style/line"
        app:layout_constraintTop_toBottomOf="@id/input_new_password"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <com.hwy.mymusicplayer.views.InputView
        android:id="@+id/input_new_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputViewHeight"
        app:layout_constraintTop_toTopOf="@id/input_new_password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:input_icon="@mipmap/password"
        app:input_hint="enter new password again"
        app:is_password="true"/>

    <View
        style="@style/line"
        app:layout_constraintTop_toBottomOf="@id/input_new_password_confirm"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        style="@style/commitBtn"
        app:layout_constraintTop_toBottomOf="@id/input_new_password_confirm"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/marginSize"
        android:text="@string/alter" />


</androidx.constraintlayout.widget.ConstraintLayout>